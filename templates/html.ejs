<!DOCTYPE html>
<html>
    <head>
        <title>Documentation</title>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/lumen/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    </head>
    <body>
        <div style="margin: 20px;">
            <% schema.forEach(function(call) { %>
            <div class="call panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><%= call.remoteName %></h3>
                </div>
                <div class="panel-body">
                    <div><%= call.description %></div>
                    <ul>
                        <%_ call.routes.forEach(function(route) { _%>
                        <li><%= route.first().toUpperCase() + " " + route.last() %></li>
                        <%_ }) _%>
                    </ul>
                    <%_ Object.keys(call.inputs).forEach(function(name) { _%>
                    <div>
                        <b><%= name %></b>
                    </div>
                    <%_ }) _%>
                </div>
            </div>
            <% }) %>
        </div>
        <h6 class="text-center text-muted">
            <small>Auto-Generated at <%= new Date() %>.</small>
        </h6>
    </body>
</html>